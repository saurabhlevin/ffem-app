<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.akvo.caddisfly">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application>
        <activity
            android:name=".ui.TestActivity"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="io.ffem.experiment" />

                <category android:name="android.intent.category.DEFAULT" />

            </intent-filter>
        </activity>

        <service
            android:name=".sensor.bluetooth.BluetoothLeService"
            android:enabled="true" />
        <!-- /Bluetooth -->

        <!-- USB -->
        <activity
            android:name=".sensor.UsbConnectionActivity"
            android:autoRemoveFromRecents="true"
            android:screenOrientation="nosensor"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="io.ffem.experiment.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true"
            tools:replace="android:authorities">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".sensor.cuvette.ui.CuvetteMeasureActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".sensor.cuvette.ui.CuvetteResultActivity"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".sensor.turbidity.ResultInfoListActivity"
            android:parentActivityName=".ui.TestActivity"
            android:theme="@style/AppTheme.Main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.akvo.caddisfly.ui.TestActivity" />
        </activity>
        <activity
            android:name=".sensor.turbidity.ResultInfoDetailActivity"
            android:parentActivityName=".sensor.turbidity.ResultInfoListActivity"
            android:theme="@style/AppTheme.Main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.akvo.caddisfly.sensor.turbidity.ResultInfoListActivity" />
        </activity>
    </application>

</manifest>