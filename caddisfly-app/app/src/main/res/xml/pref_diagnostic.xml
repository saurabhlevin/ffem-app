<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <org.akvo.caddisfly.preference.PreferenceCategoryCustom
        android:key="preferenceCategoryDiagnostics"
        android:title="@string/diagnostics">
        <Preference
            android:key="cameraPreview"
            android:title="@string/cameraPreview" />
        <Preference
            android:key="startTest"
            android:title="Colorimetric Test" />
        <Preference
            android:key="startStripTest"
            android:title="Strip Test" />
        <Preference
            android:key="startFluorideTest"
            android:title="Fluoride Test">
            <intent
                android:data="f0f3c1dd-89af-49f1-83e7-bcc31c3006cf"
                android:targetClass="org.akvo.caddisfly.sensor.turbidity.TimeLapseActivity"
                android:targetPackage="org.akvo.caddisfly.experiment" />
        </Preference>
        <CheckBoxPreference
            android:key="@string/noFlashKey"
            android:title="@string/noFlash" />
        <CheckBoxPreference
            android:key="@string/useFlashModeKey"
            android:title="@string/useFlashMode" />
        <CheckBoxPreference
            android:key="@string/ignoreTimeDelaysKey"
            android:title="@string/ignoreTimeDelays" />
        <CheckBoxPreference
            android:key="@string/showDebugMessagesKey"
            android:title="@string/debuggingOn" />
        <CheckBoxPreference
            android:key="@string/noSoundKey"
            android:title="@string/noSound" />
        <EditTextPreference
            android:defaultValue="5"
            android:dialogMessage="A number from 1 to 5"
            android:key="@string/samplingsTimeKey"
            android:maxLength="2"
            android:numeric="integer"
            android:title="Sampling times" />
        <EditTextPreference
            android:defaultValue="40"
            android:dialogMessage="Enter a value below 400"
            android:key="@string/colorDistanceToleranceKey"
            android:maxLength="3"
            android:numeric="integer"
            android:title="Max color distance" />
        <Preference
            android:key="diagnosticInformation"
            android:title="Diagnostic Information">
            <intent
                android:targetClass="org.akvo.caddisfly.ui.DiagnosticInfoActivity"
                android:targetPackage="org.akvo.caddisfly.experiment" />
        </Preference>
    </org.akvo.caddisfly.preference.PreferenceCategoryCustom>
</PreferenceScreen>
